<div class="post" {{bindAttr id="htmlId"}}>
    <h3>{{title}}</h3>
    {{createdAt}}
    {{#if isExpanded}}
        <div class="content">{{body}}</div>
        <button {{action "contract"}}>Hide</button>
        <br/>
        <ul class="unstyled">
            {{#each comment in controllers.posts}}
                <li>comment.content</li>
                <br/>
            {{/each}}
        </ul>
    {{else}}
        <button {{action "expand"}}>Show more...</button>
    {{/if}}
</div>